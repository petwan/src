# Application
APP_NAME={{ cookiecutter.project_name }}
APP_ENV=development
DEBUG=true
API_V1_PREFIX={{ cookiecutter.api_prefix }}

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

{% if cookiecutter.include_postgresql -%}
# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/{{ cookiecutter.project_slug }}_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
ECHO_SQL=false
# AUTO_CREATE_TABLES: Set to true in development to auto-create tables on startup.
# In production, always use Alembic migrations: alembic upgrade head
AUTO_CREATE_TABLES=false
{%- endif %}

{% if cookiecutter.include_redis -%}
# Redis
REDIS_URL=redis://localhost:6379/0
{%- endif %}

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

{% if cookiecutter.include_celery -%}
# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
{%- endif %}

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# OpenAPI
OPENAPI_URL={{ cookiecutter.openapi_url }}
OPENAPI_DOCS_URL=/docs
OPENAPI_REDOC_URL=/redoc
